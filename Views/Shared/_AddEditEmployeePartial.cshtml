@model EmployeeViewModel

<div class="mb-3">
    <label for="" class="form-label">Employee Number:</label>
    <input type="text" class="form-control" asp-for="Employee.EmployeeNumber">
</div>

<div class="mb-3">
    <label for="" class="form-label">Employee Name:</label>
    <input type="text" class="form-control" asp-for="Employee.Name">
</div>

<div class="mb-3">
    <label for="" class="form-label">Department:</label>
    <select class="form-select" asp-for="Employee.DepartmentId">
        @foreach (var dept in Model.Departments)
        {
            <option value="@dept.DepartmentId">@dept.DepartmentName</option>
        }

    </select>
</div>

<div class="mb-3">
    <label for="" class="form-label">Designation:</label>
    <select class="form-select" asp-for="Employee.DesignationId">
        @foreach (var desi in Model.Designations)
        {
            <option value="@desi.DesignationId">@desi.DesignationName</option>
        }

    </select>
</div>